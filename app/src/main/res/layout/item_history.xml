<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/txtprodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/acme"
        android:maxWidth="200dp"
        android:paddingLeft="17dp"
        android:text="name"
        android:textAlignment="textStart"
        android:textColor="#782019"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtprodprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtprodName"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/acme"
        android:maxWidth="200dp"
        android:paddingLeft="17dp"
        android:text="name"
        android:textAlignment="textStart"
        android:textColor="#098555"
        android:textSize="29dp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/txtprodprice"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/acme"
        android:paddingLeft="17dp"
        android:text="name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26dp"

        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtprodQuantiti"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"

        android:fontFamily="@font/acme"
        android:maxWidth="200dp"
        android:paddingRight="17dp"
        android:text="name"
        android:textAlignment="center"


        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="italic" />

    <TextView

        android:id="@+id/txttotal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtprodQuantiti"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/acme"
        android:paddingRight="17dp"
        android:text="name"


        android:textColor="#058857"
        android:textSize="26dp"
        android:textStyle="italic" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txtDate"
        android:layout_marginBottom="7dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>